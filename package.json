{
  "name": "reusable-node-setup",
  "version": "1.0.0",
  "description": "A comprehensive, reusable Node.js API setup with authentication, validation, testing, and more",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "npm run lint && npm run test:ci",
    "docker:build": "docker build -t reusable-node-app .",
    "docker:run": "docker run -p 3000:3000 reusable-node-app",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "restart": "pm2 restart all",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "authentication",
    "jwt",
    "mongodb",
    "mongoose",
    "validation",
    "testing",
    "jest",
    "swagger",
    "docker",
    "reusable",
    "boilerplate",
    "starter",
    "template"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/reusable-node-setup.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/reusable-node-setup/issues"
  },
  "homepage": "https://github.com/yourusername/reusable-node-setup#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "celebrate": "^15.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.4",
    "axios": "^1.5.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "bullmq": "^4.12.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1450.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "sharp": "^0.32.5",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "express-validator": "^7.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.14",
    "hpp": "^0.2.3",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "socket.io": "^4.7.2",
    "node-cron": "^3.0.2",
    "agenda": "^5.0.0",
    "i18n": "^0.15.1",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.1.5",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "@sentry/node": "^7.64.0",
    "@sentry/profiling-node": "^1.2.0",
    "pm2": "^5.3.0",
    "express-prometheus-middleware": "^1.2.0",
    "prom-client": "^14.2.0",
    "newrelic": "^10.5.0",
    "sentry": "^0.1.2",
    "@sentry/node": "^7.64.0",
    "express-status-monitor": "^1.3.4",
    "express-list-endpoints": "^6.0.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "prettier": "^3.0.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-jest": "^27.2.3",
    "nodemon": "^3.0.1",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "nyc": "^15.1.0",
    "codecov": "^3.8.3",
    "faker": "^6.6.6",
    "@faker-js/faker": "^8.0.2",
    "mongodb-memory-server": "^8.15.1",
    "redis-memory-server": "^0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
