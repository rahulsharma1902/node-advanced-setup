# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000
APP_NAME=Reusable Node Setup
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# =================================
# DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/reusable_node_app
MONGODB_TEST_URI=mongodb://localhost:27017/reusable_node_app_test

# Database Connection Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME=30000
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=30000

# =================================
# JWT CONFIGURATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=app:

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters-long
SESSION_MAX_AGE=86400000

# =================================
# EMAIL CONFIGURATION
# =================================
# SMTP Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM_NAME=Reusable Node App
EMAIL_FROM_ADDRESS=noreply@yourapp.com
EMAIL_REPLY_TO=support@yourapp.com

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun (Alternative)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# =================================
# FILE STORAGE CONFIGURATION
# =================================
# Local Storage
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =================================
# EXTERNAL API KEYS
# =================================
# Google APIs
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =================================
# MONITORING & LOGGING
# =================================
# Sentry
SENTRY_DSN=your-sentry-dsn

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Reusable Node App

# DataDog
DATADOG_API_KEY=your-datadog-api-key

# Log Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Rate Limits
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=5

# =================================
# SECURITY CONFIGURATION
# =================================
# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=7200000
PASSWORD_RESET_EXPIRES=3600000

# =================================
# PERFORMANCE & CACHING
# =================================
# Cache TTL (in seconds)
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Request Timeout
REQUEST_TIMEOUT=30000
UPLOAD_TIMEOUT=300000

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# =================================
# QUEUE CONFIGURATION
# =================================
# Bull Queue
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Job Types
EMAIL_QUEUE_NAME=email-queue
NOTIFICATION_QUEUE_NAME=notification-queue
FILE_PROCESSING_QUEUE_NAME=file-processing-queue

# =================================
# CRON JOBS
# =================================
ENABLE_CRON_JOBS=true
CLEANUP_CRON=0 2 * * *
BACKUP_CRON=0 3 * * 0
HEALTH_CHECK_CRON=*/5 * * * *

# =================================
# DEVELOPMENT CONFIGURATION
# =================================
# Debug
DEBUG=app:*
VERBOSE_LOGGING=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_STATUS_MONITOR=true
ENABLE_PLAYGROUND=true

# Hot Reload
NODEMON_DELAY=2000
NODEMON_IGNORE=node_modules,logs,uploads

# =================================
# TESTING CONFIGURATION
# =================================
# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/reusable_node_app_test
TEST_REDIS_URL=redis://localhost:6379/1

# Test Configuration
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80

# =================================
# PRODUCTION CONFIGURATION
# =================================
# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Process Management
PM2_INSTANCES=max
PM2_MAX_MEMORY_RESTART=1000M

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =================================
# FEATURE FLAGS
# =================================
FEATURE_WEBSOCKETS=true
FEATURE_FILE_UPLOAD=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_RATE_LIMITING=true
FEATURE_API_VERSIONING=true
FEATURE_SWAGGER_DOCS=true
FEATURE_PERFORMANCE_MONITORING=true

# =================================
# CUSTOM CONFIGURATION
# =================================
# Add your custom environment variables here
CUSTOM_API_ENDPOINT=https://api.example.com
CUSTOM_SECRET_KEY=your-custom-secret
CUSTOM_FEATURE_FLAG=true
